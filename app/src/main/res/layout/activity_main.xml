   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@color/white"
       >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/white"
           android:gravity="center_vertical"
           android:padding="10dp"
           >
          <comd.example.win.myapplication.MyLinearLayout
              android:id="@+id/mll"
              android:layout_width="100dp"
              android:layout_height="70dp"
              android:text=""
              android:layout_marginTop="30dp"
              app:solidColor="@color/white"
              app:borderColor="@color/colorPrimary"
              app:pressColor="@color/gray"
              android:clickable="true"
              app:shapeType="oval"
              app:gradientType="radial"
              app:gradientAngle="a90"
              />
          <comd.example.win.myapplication.MyLinearLayout
              android:id="@+id/mll2"
              android:layout_width="100dp"
              android:layout_height="70dp"
              android:text=""
              android:layout_marginTop="30dp"
              app:bottom_line="true"
              app:borderWidth="5dp"
              app:borderDashWidth="10dp"
              app:borderDashGap="3dp"
              app:solidColor="@color/aliceblue"
              app:pressColor="@color/colorAccent"
              />
          <comd.example.win.myapplication.MyLinearLayout
              android:layout_width="100dp"
              android:layout_height="70dp"
              android:text=""
              android:layout_marginTop="30dp"
              app:pressColor="@color/colorPrimary"
              app:solidColor="@color/aliceblue"
              android:clickable="true"
              />
          <comd.example.win.myapplication.MyLinearLayout
              android:layout_width="100dp"
              android:layout_height="70dp"
              android:text=""
              android:layout_marginTop="30dp"
              app:bottom_line="true"
              app:borderWidth="5dp"
              app:borderDashWidth="10dp"
              app:borderDashGap="3dp"
              app:pressColor="@color/colorAccent"
              app:solidColor="@color/aliceblue"
              android:clickable="true"
              />
       </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="vertical"
          >

         <comd.example.win.myapplication.MyLinearLayout
             android:id="@+id/ll"
             android:layout_width="100dp"
             android:layout_height="70dp"
             android:layout_marginTop="30dp"
             android:clickable="true"
             android:text=""
             android:visibility="gone"
             app:borderColor="@color/colorPrimary"
             app:borderWidth="10dp"
             app:drawable_normal="@drawable/bd_logo1"
             app:drawable_press="@mipmap/ic_launcher"
             app:solidColor="@color/colorAccent"
             />

         <comd.example.win.myapplication.MyRelativeLayout
             android:layout_width="100dp"
             android:layout_height="50dp"
             app:all_line="true"
             app:shapeType="oval"
             >

         </comd.example.win.myapplication.MyRelativeLayout>

         <comd.example.win.myapplication.MyEditText
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:paddingRight="5dp"
             app:all_line="true"
             app:borderDashGap="2dp"
             app:borderDashWidth="2dp"
             app:borderWidth="3dp"
             app:bottomLeftRadius="30dp"
             app:gradientAngle="a45"
             app:gradientCenterX="0.5"
             app:gradientCenterY="0.5"
             app:gradientEndColor="@color/colorPrimaryAlpha1"
             app:gradientRadius="111dp"
             app:gradientStartColor="@color/red_point"
             app:gradientType="linear"
             app:radius="20dp"
             app:shapeType="rectangle"
             app:solidColor="@color/transparent"
             app:top_line="true"
             />

         <comd.example.win.myapplication.MyImageView
             android:id="@+id/iv"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@android:drawable/checkbox_on_background"
             app:radius="15dp"

             />

         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:button="@android:drawable/checkbox_on_background"
             android:checked="true"
             />

         <CheckBox
             android:layout_width="150dp"
             android:layout_height="100dp"
             android:button="@null"
             android:drawableTop="@drawable/check"
             />

         <comd.example.win.myapplication.MyCheckBox
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:button="@null"
             android:checked="true"
             android:text="android"
             android:gravity="center"
             android:drawableRight="@drawable/check"
             android:drawableBottom="@drawable/check"
             android:drawableTop="@drawable/check"
             android:padding="10dp"

             app:normal_drawable="@drawable/normal"
             app:checked_drawable="@drawable/check"
             app:drawable_direction="left"
             app:drawable_left_width="20dp"
             />
      </LinearLayout>
   </LinearLayout>
</LinearLayout>
